<%= turbo_stream.replace :ai_response, partial: "user_lessons/ai_response", locals: { content: @user_lesson.ai_response } %>

<% if @user_lesson.completed %>
  <%= turbo_stream.append "modal-launch-target" do %>
    <%= render "user_lessons/completion_modal", user_lesson: @user_lesson, next_user_lesson: @next_user_lesson, show_modal: true %>
  <% end %>
<% end %>